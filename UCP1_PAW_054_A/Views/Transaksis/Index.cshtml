@model IEnumerable<UCP1_PAW_054_A.Models.Transaksi>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Id customer")
            </th>
            <th>
                @Html.DisplayName("Id produk")
            </th>
            <th>
                @Html.DisplayName("Total transaksi")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCustomer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProduk)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalTransaksi)
